# Copy this file to .env and fill in values before deploying
# Required
MONGO_URI=your-mongodb-connection-string

# Optional (but recommended for Shiprocket integration)
SHIPROCKET_EMAIL=your-shiprocket-email
SHIPROCKET_PASSWORD=your-shiprocket-password

# Optional secrets (defaults exist in code, but override for production)
JWT_SECRET=your-jwt-secret
JWT_ADMIN_SECRET=your-admin-jwt-secret

# Runtime
PORT=5000
NODE_ENV=production
